

<% if current_user %>
	<% if current_user.username=='admin' %>
		<h1>Nieuwe aanwezigheid</h1>

		<% form_tag :action => 'create'  do %>

		<p><label for="aanwezig_vak">Vak</label>:
		<%= collection_select(:aanwezig,:vak_id,@vaks,:id,:naam) %></p>
		<p><label for="aanwezig_studen">Student</label>:
		<%= collection_select(:aanwezig,:student_id,@students,:id,:naam) %></p>
		<p><label for="aanwezig_aantal">Aantal Aanwezigheden</label>:
		<%= text_field 'aanwezig', 'aantal' %></p>
		<%= submit_tag "Create" %>
		<% end  %>

		<%= link_to 'Terug', aanwezigs_path %>
	<% else%>
		<p>Voor deze pagina moet je administrator-machtiging hebben</p>
	<% end %>
<% else%>
		<p>Voor deze pagina moet je administrator-machtiging hebben</p>
<% end %>

<%= link_to 'Terug', users_path %>

<% if current_user %>
	<% if current_user.username=='admin' %>
		<h1>Lijst van studenten</h1>

		<table>
		  <tr>
		    <th>Naam</th>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>

		<% @students.each do |student| %>
		  <tr>
		    <td><%= student.naam %></td>
		    <td><%= link_to 'Toon student', student %></td>
		    <td><%= link_to 'Wijzig', edit_student_path(student) %></td>
		    <td><%= link_to 'Verwijder', student, :confirm => 'Ben je zeker?', :method => :delete %></td>
		  </tr>
		<% end %>
		</table>

		<br />

		<%= link_to 'New Student', new_student_path %>
	<% else%>
		<p>Voor deze pagina moet je administrator-machtiging hebben</p>
	<% end %>
<% else%>
		<p>Voor deze pagina moet je administrator-machtiging hebben</p>
<% end %>

<%= link_to 'Terug', users_path %>
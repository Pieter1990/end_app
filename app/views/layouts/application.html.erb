<!DOCTYPE html>
<html>
<head>
  <title>EndApp</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="nav">
	        <% if current_user %>
				<% if current_user.username =='admin'%>
					<%= link_to 'Data wijzigen', "../wijzig" %>
					<%= link_to "Logout", :logout%>
				<% else %>
					<%= link_to 'Ga naar de vakkenlijst', "../lijsts" %>
	        		<%= link_to "wijzig je profiel", edit_user_path(current_user.id)%>
					<%= link_to "Logout", :logout%>
					<% end %>
	        <% else %>
	        
	        <%= link_to "Login", :login %>
	        <% end %>
	</div>
	

<%= yield %>

</body>
</html>
